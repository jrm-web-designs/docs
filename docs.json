{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "palm",
  "name": "Clancy",
  "colors": {
    "primary": "#000000",
    "light": "#000000",
    "dark": "#ffffff"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "global": {
      "anchors": [
        {
          "anchor": "Dashboard",
          "icon": "house",
          "color": {
            "light": "#000000",
            "dark": "#ffffff"
          },
          "hidden": true,
          "href": "https://clancy-sms.com/dashboard"
        }
      ]
    },
    "groups": [
      {
        "group": "Foundations",
        "pages": [
          "build/foundations/overview",
          "build/foundations/concepts",
          "build/foundations/quickstart",
          "build/foundations/installation",
          "build/foundations/configuration"
        ]
      },
      {
        "group": "Integrations",
        "pages": [
          "build/integrations/nextjs",
          "build/integrations/express",
          "build/integrations/authentication/overview",
          "build/integrations/authentication/clerk",
          "build/integrations/authentication/supabase",
          "build/integrations/authentication/custom-auth"
        ]
      },
      {
        "group": "Workflows",
        "pages": [
          "build/workflows/delivery-tracking",
          "build/workflows/go-live",
          "build/workflows/idempotency",
          "build/workflows/otp",
          "build/workflows/rate-limiting",
          "build/workflows/testing",
          "build/workflows/transactional-alerts"
        ]
      },
      {
        "group": "Trust",
        "pages": [
          "build/trust/acceptable-use",
          "build/trust/compliance",
          "build/trust/security",
          "build/trust/sending-limits"
        ]
      },
      {
        "group": "Troubleshooting",
        "pages": [
          "build/troubleshooting/error-handling"
        ]
      },
      {
        "group": "API documentation",
        "pages": [
          "api-reference/introduction"
        ]
      },
      {
        "group": "Endpoint examples",
        "pages": [
          "api-reference/endpoint/get",
          "api-reference/endpoint/create",
          "api-reference/endpoint/delete",
          "api-reference/endpoint/webhook"
        ]
      }
    ]
  },
  "navbar": {
    "links": [],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://clancy-sms.com/dashboard"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "appearance": {
    "default": "dark",
    "strict": true
  },
  "styling": {
    "codeblocks": "system"
  }
}
